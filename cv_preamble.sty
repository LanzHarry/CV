% ---------- USE PACKAGES AND SETTINGS ----------
% for controlling the margins
\usepackage[a4paper,inner=25mm,outer=25mm,top=20mm,bottom=20mm,headheight=15pt]{geometry}

% for custom latex behaviours
\usepackage{etoolbox}

% custom colour for accents
\usepackage[dvipsnames]{xcolor}
\definecolor{myblue}{RGB}{0 102 204}

% for clicking on contents for navigation
\usepackage[hidelinks]{hyperref}

\hypersetup{
  colorlinks=false,
  linkcolor=myblue,      % for internal links (e.g. table of contents)
  urlcolor=blue         % for external links
}

% temp packages while editing
\setlength{\marginparwidth}{2cm}

% set font to be sans serif if desired
\renewcommand{\familydefault}{\sfdefault}

\usepackage{microtype}

% for controlling how paragraphs look
\usepackage{parskip}
\setlength{\parindent}{0pt}

% for including images
\usepackage{graphicx}

% for controlling table formatting
\usepackage{makecell}
\usepackage{ragged2e}
\usepackage{tabularray}
\UseTblrLibrary{booktabs}
\SetTblrInner{rowsep=6pt}
\RenewDocumentCommand\TblrAlignLeft{}{\RaggedRight}

% for generating ordinal numbers
\usepackage{nth}

% for easy addition of quotation marks
\usepackage{dirtytalk}

% for control of the headers and footers
\usepackage{fancyhdr}

% setup fancy headers and footers
% set pagestyle to have headers
\pagestyle{fancy}
\fancyhf{}  % clear all header and footer fields
\renewcommand\headrulewidth{0pt} % clear toprule from each page
\fancyfoot[C]{\thepage}

% redefine pagestyle to get correct results on contents and similar "special" pages
\fancypagestyle{plain}{
\fancyhf{}  % clear all header and footer fields
\renewcommand\headrulewidth{0pt} % clear toprule from each page
\fancyfoot[C]{\thepage}
} 

% prevent footnotes from splitting up
\interfootnotelinepenalty=10000

% for spacing after custom commands
\usepackage{xspace}

% custom c++ text
\newcommand{\cpp}{C\texttt{++}\xspace}